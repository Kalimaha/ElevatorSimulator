<script type='text/x-handlebars-template' id='main_structure'>
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2>
                    Elevator Simulator
                </h2>
            </div>
            <div class="col-lg-6">
                <h2 class="pull-right">
                    Time: <span id="time">0</span>
                </h2>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-lg-2">
                <h3>
                    Floor
                </h3>
            </div>
            <div class="col-lg-2">
                <h3>
                    People
                </h3>
            </div>
            <div class="col-lg-2">
                <h3>
                    Going To
                </h3>
            </div>
            <div class="col-lg-2">
                <h3>
                    Status
                </h3>
            </div>
            <div class="col-lg-1 text-center">
                <h3>
                    A
                </h3>
            </div>
            <div class="col-lg-1 text-center">
                <h3>
                    B
                </h3>
            </div>
            <div class="col-lg-1 text-center">
                <h3>
                    C
                </h3>
            </div>
            <div class="col-lg-1 text-center">
                <h3>
                    D
                </h3>
            </div>
        </div>
        <br>
        {{#each floors}}
            <div class="row">
                <div class="col-lg-2">
                    <h4>
                        {{floor}}
                    </h4>
                </div>
                <div class="col-lg-2">
                    <input id="people_at_{{floor}}" class="form-control" value="0" type="number">
                </div>
                <div class="col-lg-2">
                    <select class="form-control" id="going_to_{{floor}}">
                        <option>Select a destination...</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                    </select>
                </div>
                <div class="col-lg-1">
                    <p id="status_{{floor}}">
                       ON HOLD
                    </p>
                </div>
                <div class="col-lg-1">
                    <button class="btn btn-primary call_button" id="call_{{floor}}" data-floor="{{floor}}">
                        CALL
                    </button>
                </div>
                <div class="col-lg-1 text-center">
                    <div id="elevator_a_floor_{{floor}}" class="elevator_a">
                        |
                    </div>
                </div>
                <div class="col-lg-1 text-center">
                    <div id="elevator_b_floor_{{floor}}" class="elevator_b">
                        |
                    </div>
                </div>
                <div class="col-lg-1 text-center">
                    <div id="elevator_c_floor_{{floor}}" class="elevator_c">
                        |
                    </div>
                </div>
                <div class="col-lg-1 text-center">
                    <div id="elevator_d_floor_{{floor}}" class="elevator_d">
                        |
                    </div>
                </div>
            </div>
        {{/each}}
        <br>
        <div class="row">
            <div class="col-lg-8">
                &nbsp;
            </div>
            <div class="col-lg-1">
                <button class="btn btn-primary history_button" style="width: 100%;" data-history="A">
                    History
                </button>
            </div>
            <div class="col-lg-1">
                <button class="btn btn-primary history_button" style="width: 100%;" data-history="B">
                    History
                </button>
            </div>
            <div class="col-lg-1">
                <button class="btn btn-primary history_button" style="width: 100%;" data-history="C">
                    History
                </button>
            </div>
            <div class="col-lg-1">
                <button class="btn btn-primary history_button" style="width: 100%;" data-history="D">
                    History
                </button>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-lg-4">
                <button class="btn btn-success" style="width: 100%;" id="start_button">
                    <i class="fa fa-play"></i> Start Simulation
                </button>
            </div>
            <div class="col-lg-4">
                <button class="btn btn-warning" style="width: 100%;" id="pause_button">
                    <i class="fa fa-pause"></i> Pause Simulation
                </button>
            </div>
            <div class="col-lg-4">
                <button class="btn btn-danger" style="width: 100%;"  id="reset_button">
                    <i class="fa fa-close"></i> Reset Simulation
                </button>
            </div>
        </div>
    </div>
    <br>
    <div class="modal fade" tabindex="-1" role="dialog" id="modal_history" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">History</h4>
                </div>
                <div class="modal-body" style="height: 200px; overflow-y: auto;">
                    <table class="table table-bordered table-responsive table-striped table-hover table-condensed">
                        <thead>
                            <tr>
                                <th>Session</th>
                                <th>Time</th>
                                <th>Floor</th>
                                <th>Direction</th>
                            </tr>
                        </thead>
                        <tbody id="modal_content">
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</script>

<script type='text/x-handlebars-template' id='elevator_structure'>
    <button class="btn btn-info" style="width: 100%;">
        <div class="badge">
            {{people.length}} <i class="fa {{direction}}"></i>
        </div>
    </button>
</script>